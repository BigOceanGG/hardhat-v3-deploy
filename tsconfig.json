{
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2020"]
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./test", "./src"]
}
